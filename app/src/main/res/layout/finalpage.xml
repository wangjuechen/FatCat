<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_ImagesForOneMonthLater"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_newWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="New Weight"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_ImagesForOneMonthLater"
        app:layout_constraintTop_toBottomOf="@+id/iv_ImagesForOneMonthLater"
        />

    <EditText
        android:id="@+id/et_weightEditText"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="@+id/iv_ImagesForOneMonthLater"
        app:layout_constraintLeft_toRightOf="@+id/tv_newWeight"
        app:layout_constraintTop_toTopOf="@+id/tv_newWeight"
        app:layout_constraintBottom_toBottomOf="@+id/tv_newWeight"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_weightEditText"
        app:layout_constraintRight_toRightOf="@+id/iv_ImagesForOneMonthLater"
        app:layout_constraintLeft_toLeftOf="@+id/iv_ImagesForOneMonthLater"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/btn_shareCatInFacebook"
        android:background="#1ebbef"
        />

</android.support.constraint.ConstraintLayout>